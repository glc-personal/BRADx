<?xml version="1.0" encoding="UTF-8" ?>
<controller name="reader" description="Reader module">
    <displayName>Reader</displayName>
    <child name="imager" description="Imager module">
        <displayName>Imager</displayName>
        <hardware name="camera">
            <displayName>Teledyne FLIR</displayName>
            <simulate>true</simulate>
            <communication type="usb"/>
            <defaults>
                <exposure>600000</exposure>
            </defaults>
        </hardware>
        <hardware name="filterWheel">
            <displayName>Filter Wheel</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>1</address>
            </communication>
            <defaults>
                <position>0</position>
                <speed>100000</speed>
            </defaults>
        </hardware>
        <hardware name="ledBoard">
            <displayName>LED Board</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>2</address>
            </communication>
            <defaults>
                <intensities>0</intensities>
            </defaults>
        </hardware>
    </child>
    <child name="gantry" description="Gantry system">
        <displayName>Gantry</displayName>
        <hardware name="xAxis">
            <displayName>X-Axis</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>3</address>
            </communication>
            <defaults>
                <position>0</position>
            </defaults>
        </hardware>
        <hardware name="yAxis">
            <displayName>Y-Axis</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>4</address>
            </communication>
            <defaults>
                <position>0</position>
            </defaults>
        </hardware>
        <hardware name="zAxis">
            <displayName>Z-Axis</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>5</address>
            </communication>
            <defaults>
                <position>0</position>
            </defaults>
        </hardware>
    </child>
</controller>