<?xml version="1.0" encoding="utf-8"?>
<controller name="robot" description="Robot module">
    <displayName>Robot</displayName>
    <child name="gantry" description="Gantry system">
        <displayName>Gantry</displayName>
        <hardware name="xAxis">
            <displayName>X-Axis</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>3</address>
            </communication>
            <defaults>
                <position>0</position>
            </defaults>
        </hardware>
        <hardware name="yAxis">
            <displayName>Y-Axis</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>4</address>
            </communication>
            <defaults>
                <position>0</position>
            </defaults>
        </hardware>
        <hardware name="zAxis">
            <displayName>Z-Axis</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>5</address>
            </communication>
            <defaults>
                <position>0</position>
            </defaults>
        </hardware>
    </child>
    <child name="liquidHandler" description="Liquid Handler system">
        <displayName>LiquidHandler</displayName>
        <hardware name="pipetteHead">
            <displayName>Seyonic Pipette Head</displayName>
            <simulate>true</simulate>
            <communication type="ethernet">
                <ipAddress>127.0.0.1</ipAddress>
            </communication>
            <defaults>
                <pressure>0</pressure>
            </defaults>
        </hardware>
        <hardware name="dripPlate">
            <displayName>Drip Plate</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>8</address>
            </communication>
            <defaults>
                <position>0</position>
            </defaults>
        </hardware>
        <hardware name="valveBoard">
            <displayName>Valve Board</displayName>
            <simulate>true</simulate>
            <communication type="serialBus">
                <comPort>COM4</comPort>
                <address>9</address>
            </communication>
            <defaults>
                <open>false</open>
            </defaults>
        </hardware>
    </child>
</controller>