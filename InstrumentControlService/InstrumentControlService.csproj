<Project Sdk="Microsoft.NET.Sdk.Worker">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UserSecretsId>dotnet-InstrumentControlService-92e33073-1687-4266-adac-ec46d108a185</UserSecretsId>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
        <RootNamespace>InstrumentControlService</RootNamespace>
    </PropertyGroup>
    
    <ItemGroup>
        <!-- Publish BRADx/configs into publish output under configs/ -->
        <Content Include="../BRADx/configs/**/ics.*.xml"
                 Link="configs\%(RecursiveDir)%(Filename)%(Extension)"
                 CopyToOutputDirectory="Always"
                 CopyToPublishDirectory="Always" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0"/>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\.dockerignore">
        <Link>.dockerignore</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Controllers\Controllers.csproj" />
      <ProjectReference Include="..\Reader\Reader.csproj" />
      <ProjectReference Include="..\StateMachines\StateMachines.csproj" />
    </ItemGroup>
</Project>
